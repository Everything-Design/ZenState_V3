{
  "name": "zenstate",
  "version": "3.0.14",
  "description": "ZenState - Everything Flow",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:main && concurrently -k \"npm run dev:renderer\" \"npm run dev:main:watch\" \"sleep 3 && electron .\"",
    "dev:renderer": "vite",
    "dev:main:watch": "tsc -p tsconfig.main.json --watch",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "publish": "npm run build && electron-builder --mac --publish always",
    "publish:win": "npm run build && electron-builder --win --publish always"
  },
  "author": "ZenState",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.3.0",
    "lucide-react": "^0.460.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "build": {
    "appId": "com.zenstate.app",
    "productName": "ZenState",
    "publish": {
      "provider": "github",
      "owner": "Everything-Design",
      "repo": "ZenState_V3"
    },
    "mac": {
      "icon": "build/icon.png",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "dist/shared/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icons",
        "to": "icons"
      }
    ]
  }
}
